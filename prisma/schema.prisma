generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  phone     String?
  role      String   @default("COMPANY")
  createdAt DateTime @default(now())

  companyRequests     Request[] @relation("CompanyRequests")
  transporterRequests Request[] @relation("TransporterJobs")
}

model Request {
  id            Int      @id @default(autoincrement())
  pickup        String
  delivery      String
  cargo         String?
  description   String?
  price         Int
  companyId     Int
  transporterId Int?
  acceptedAt    DateTime?
  createdAt     DateTime @default(now())

  company     User  @relation("CompanyRequests", fields: [companyId], references: [id])
  transporter User? @relation("TransporterJobs", fields: [transporterId], references: [id])
}
